<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <include layout="@layout/screen0_music_page1" />

    <com.common.view.MyScrollView
        android:id="@+id/music_page_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:fitsSystemWindows="true"
        android:focusable="false"
        android:orientation="horizontal"
        android:tag="0,1024:1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true"
            android:focusable="false"
            android:orientation="horizontal" >

            <include layout="@layout/screen0_music_page0" />

            <!-- <include layout="@layout/screen0_music_page1" /> -->

            <include layout="@layout/screen0_music_page2" />
        </LinearLayout>
    </com.common.view.MyScrollView>

</RelativeLayout>