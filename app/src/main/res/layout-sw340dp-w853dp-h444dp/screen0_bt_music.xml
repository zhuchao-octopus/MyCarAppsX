<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/playing_content"
        android:layout_width="fill_parent"
        android:layout_height="800px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="115px"
            android:gravity="center"
            android:layout_marginTop="7px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/disconnect_info"
                style="@style/CommonStyleFonts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="105px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bt_music_pic"
                android:layout_width="387px"
                android:layout_height="441px"
                android:layout_marginLeft="200px"
                android:layout_marginTop="0px"
                android:src="@drawable/bt_music_pic_level" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="390px"
                android:layout_marginLeft="90px"
                android:layout_marginTop="00px"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="720px"
                    android:layout_height="90px" >

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/music_name" />

                    <TextView
                        android:id="@+id/song"
                        style="@style/shadowTextCommonStyleFonts"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="37px"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="57.0px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="720px"
                    android:layout_height="90px" >

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/music_artist" />

                    <TextView
                        android:id="@+id/artist"
                        style="@style/shadowTextCommonStyleFonts"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="37px"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="42.0px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="720px"
                    android:layout_height="90px" >

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/music_album" />

                    <TextView
                        android:id="@+id/album"
                        style="@style/shadowTextCommonStyleFonts"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="37px"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="42.0px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    style="@style/shadowTextCommonStyleFonts"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="7px"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="42.0px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/currenttime"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="18px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <SeekBar
                    android:id="@+id/progress"
                    android:layout_width="520px"
                    android:layout_height="36px"
                    android:background="@drawable/seek_bar_bg"
                    android:paddingLeft="16.0px"
                    android:paddingRight="16.0px"
                    android:progress="50"
                    android:progressDrawable="@drawable/rl_progress"
                    android:thumb="@drawable/thumb" />
            </LinearLayout>

            <TextView
                android:id="@+id/totaltime"
                style="@style/shadowTextCommonStyleFonts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="18px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180px"
        android:background="@drawable/radio_bottom_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/prev"
                style="@style/CommonWeightAkParamter"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/prev" />

            <ImageView
                android:id="@+id/pp"
                style="@style/CommonWeightAkParamter"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/play_level" />

            <ImageView
                android:id="@+id/next"
                style="@style/CommonWeightAkParamter"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/next" />

            <ImageView
                android:id="@+id/eq"
                style="@style/CommonWeightAkParamter"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/eq" />

            <ImageView
                android:id="@+id/bt"
                style="@style/CommonWeightAkParamter"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/bt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>