<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/playing_content"
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tr"
                android:layout_width="880dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/repeat2"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/button_click_back3"
                            android:clickable="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/common_repeat_tag_level" />

                        <ImageView
                            android:id="@+id/eq"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/button_click_back3"
                            android:clickable="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/eq" />

                        <ImageView
                            android:id="@+id/id3"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/button_click_back3"
                            android:clickable="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ico_artist_album" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="220dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="820dp"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="10dp">

                            <RelativeLayout
                                android:layout_width="164dp"
                                android:layout_height="180dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="5dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/album_art"
                                    android:layout_width="fill_parent"
                                    android:layout_height="180dp"
                                    android:scaleType="center"
                                    android:src="@drawable/music_pic" />

                                <!-- <ImageView -->
                                <!-- android:id="@+id/album_art2" -->
                                <!-- android:layout_width="fill_parent" -->
                                <!-- android:layout_height="140dp" -->
                                <!-- android:paddingLeft="2dp" -->
                                <!-- android:paddingRight="2dp" -->


                                <!-- android:paddingTop="2dp" -->


                                <!-- android:src="#ff0000" /> -->

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="0dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:src="@drawable/music_name" />

                                        <TextView
                                            android:id="@+id/song"
                                            style="@style/shadowTextCommonStyleFonts"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="25dp"
                                            android:ellipsize="end"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:textColor="#ffffffff"
                                            android:textSize="24dp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:src="@drawable/music_line" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_no_lyric"
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:gravity="center"
                                        android:text="@string/no_lyric"
                                        android:textColor="#ffe0e0e0"
                                        android:textSize="28.0dip" />

                                    <com.octopus.android.carapps.common.qylk.myview.LrcView
                                        android:id="@+id/lrcshow"
                                        android:layout_width="fill_parent"
                                        android:layout_height="120dp"
                                        android:visibility="gone"></com.octopus.android.carapps.common.qylk.myview.LrcView>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/id3_artist_album"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:gravity="center"
                                                android:src="@drawable/music_artist" />

                                            <TextView
                                                android:id="@+id/artist"
                                                style="@style/shadowTextCommonStyleFonts"
                                                android:layout_width="match_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="25dp"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:singleLine="true"
                                                android:textColor="#ffffffff"
                                                android:textSize="24dp" />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:src="@drawable/music_line" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:gravity="center"
                                                android:src="@drawable/music_album" />

                                            <TextView
                                                android:id="@+id/album"
                                                style="@style/shadowTextCommonStyleFonts"
                                                android:layout_width="match_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="25dp"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:singleLine="true"
                                                android:textColor="#ffffffff"
                                                android:textSize="24dp" />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:src="@drawable/music_line" />
                                    </LinearLayout>
                                </LinearLayout>
                                <!-- <ImageView -->
                                <!-- android:id="@+id/play_repeat_tag" -->
                                <!-- android:layout_width="37dp" -->
                                <!-- android:layout_height="27dp" -->
                                <!-- android:layout_marginLeft="10dp" -->
                                <!-- android:layout_marginTop="3dp" -->
                                <!-- android:src="@drawable/common_repeat_tag_level" /> -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            style="@style/shadowText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:src="@drawable/music_time" />

                                        <TextView
                                            android:id="@+id/music_total_time"
                                            style="@style/shadowText"
                                            android:layout_width="match_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="25dp"
                                            android:ellipsize="end"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:textColor="#ffffffff"
                                            android:textSize="24dp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/music_line" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp"
                    android:paddingTop="0dp">

                    <SeekBar
                        android:id="@+id/progress"
                        android:layout_width="fill_parent"
                        android:layout_height="42px"
                        android:layout_marginTop="-8px"
                        android:background="@drawable/seek_bar_bg"
                        android:paddingLeft="34.0px"
                        android:paddingRight="30.0px"
                        android:focusable="false"
                        android:progressDrawable="@drawable/rl_progress"
                        android:thumb="@drawable/thumb" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/currenttime"
                            style="@style/shadowTextCommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffffff"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/totaltime"
                            style="@style/shadowTextCommonStyleFonts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="17dp"
                            android:textColor="#ffffffff"
                            android:textSize="19dp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/eq_mode_switch"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/button_click_back3"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/eq" />

                    <ImageView
                        android:id="@+id/prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/u3_prev1"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/pp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="70dp"
                        android:clickable="true"
                        android:src="@drawable/music_play_level" />

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/u3_next1"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/folder_switch"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="70dp"
                        android:background="@drawable/button_click_back3"
                        android:clickable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/folder" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/folder_listview_same_layout"
                android:layout_width="400dp"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_all"
                        style="@style/PageSelectButtonButton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true"
                        android:drawablePadding="1.0dp"
                        android:drawableTop="@drawable/type_playing"
                        android:gravity="left|center"
                        android:text="@string/playlist"
                        android:textColor="#ffffffff"
                        android:textSize="24.0dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_local"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_arm"
                        android:drawablePadding="0.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/media"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_sd"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_sd"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/sd"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_sd2"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_sd"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/sd2"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_usb"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_usb"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/usb"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_usb2"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_usb"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/usb2"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_usb3"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_usb"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/usb3"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />

                    <Button
                        android:id="@+id/btn_usb4"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableLeft="@drawable/type2_usb"
                        android:drawablePadding="1.0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:tag="ak_paramter=100,50"
                        android:text="@string/usb4"
                        android:textColor="#ffffffff"
                        android:textSize="28.0dp" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/list_content"
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/tv_all_list"
                    style="@style/CommonListViewStyle1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0dp"
                    android:fadingEdge="none"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_add_all"
                        style="@style/CommonStyleFonts"
                        android:layout_width="fill_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/button_click_back2"
                        android:drawableLeft="@drawable/button_add"
                        android:drawablePadding="10.0dp"
                        android:gravity="left|center"
                        android:text="@string/all_song"
                        android:textColor="#ffffffff"
                        android:textSize="24.0dp" />

                    <ListView
                        android:id="@+id/tv_sd_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_sd2_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_usb_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_usb2_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_usb3_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_usb4_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/tv_local_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0dp"
                        android:fadingEdge="none" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/progressBar1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>