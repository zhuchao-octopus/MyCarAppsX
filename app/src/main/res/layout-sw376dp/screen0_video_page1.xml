            <!-- android:id="@+id/rew" -->
            <!-- style="@style/CommonWeightAkParamter" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/rew" -->
            <!-- android:visibility="gone" /> -->


