            <!-- style="@style/CommonWeightAkParamter" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/ffwd" -->
            <!-- android:visibility="gone" /> -->


            <!-- <ImageView -->
            <!-- android:id="@+id/eq" -->
            <!-- style="@style/CommonWeightAkParamter" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/eq" /> -->


