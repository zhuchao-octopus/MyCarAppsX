            <!-- android:id="@+id/full" -->
            <!-- style="@style/CommonWeightAkParamter" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/eq" /> -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>