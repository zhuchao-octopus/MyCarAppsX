<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280px"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0px" >

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="1px" -->
    <!-- android:background="#808080" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="525px"
        android:background="@drawable/cd_back"
        android:orientation="vertical"
        android:paddingLeft="290px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/disc"
                android:layout_width="55px"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/cd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="255px"
            android:layout_marginTop="10px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="180px" >

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/music_name" />

                <TextView
                    android:id="@+id/cd_title"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="75px"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="30px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cd_repeat2"
                        android:layout_width="110px"
                        android:layout_height="60px"
                        android:layout_marginRight="40px"
                        android:background="@drawable/button_click_back3"
                        android:scaleType="center"
                        android:src="@drawable/common_repeat_tag_dvd_level" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/cd_song_num"
                style="@style/CommonStyleFonts"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:paddingLeft="170px"
                android:gravity="left|center_vertical"
                android:textColor="#ffffffff"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/currenttime"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="22px" />

                <RelativeLayout
                    android:layout_width="600px"
                    android:layout_height="42px" >

                    <SeekBar
                        android:id="@id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="42px"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:maxHeight="8.0px"
                        android:minHeight="8.0px"
                        android:paddingLeft="21.0px"
                        android:paddingRight="21.0px"
                        android:progressDrawable="@drawable/seekbar_shape"
                        android:thumb="@drawable/sb_dot"
                        android:thumbOffset="0.0px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/totaltime"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="22px" />
            </LinearLayout>
        </LinearLayout>

        <!-- <ImageView -->
        <!-- android:id="@+id/play_repeat_tag" -->
        <!-- android:layout_width="37px" -->
        <!-- android:layout_height="27px" -->
        <!-- android:layout_marginLeft="560px" -->
        <!-- android:layout_marginTop="320px" -->
        <!-- android:src="@drawable/common_repeat_tag_cd_level" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="115px"
        android:background="@drawable/bottombar2"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingLeft="125px"
        android:paddingRight="25px"
        android:paddingTop="15px" >

        <Button
            android:id="@+id/cd_eq_mode_switch"
            android:layout_width="147px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:text="@string/eq_text_normal" />

        <ImageView
            android:id="@+id/cd_prev_button"
            android:layout_width="147px"
            android:layout_height="match_parent"
            android:layout_marginLeft="100px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/prev" />

        <ImageView
            android:id="@+id/cd_play_pause_button"
            android:layout_width="147px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/play_level" />

        <ImageView
            android:id="@+id/cd_stop_button"
            android:layout_width="147px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/cd_next_button"
            android:layout_width="147px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/next" />

        <!-- <ImageView -->
        <!-- android:id="@+id/cd_shuffle" -->
        <!-- style="@style/ButtonStyleCD" -->
        <!-- android:clickable="true" -->
        <!-- android:src="@drawable/shuffle" /> -->


        <!-- <ImageView -->
        <!-- android:id="@+id/cd_eq_button" -->
        <!-- android:layout_width="137px" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_marginLeft="20px" -->
        <!-- android:background="@drawable/button_click_back3" -->
        <!-- android:clickable="true" -->
        <!-- android:scaleType="fitCenter" -->
        <!-- android:src="@drawable/eq" /> -->

    </LinearLayout>

</LinearLayout> <!-- 最外围布局 纵向线性布局 -->
