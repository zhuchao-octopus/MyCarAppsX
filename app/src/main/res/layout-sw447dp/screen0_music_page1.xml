<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="633px"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0px">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="320px"
        android:layout_marginTop="0px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/playing_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px">

                <com.octopus.android.carapps.common.view.MusicRollImage
                    android:id="@+id/album_art"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40px"
                    android:background="@drawable/music_pic_back"
                    android:paddingBottom="40px"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:paddingTop="40px"
                    android:scaleType="center"
                    android:src="@drawable/music_pic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30px"
                    android:scaleType="center"
                    android:src="@drawable/cd3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="160px"
                    android:layout_marginTop="140px"
                    android:paddingLeft="80px"
                    android:paddingRight="60px">

                    <TextView
                        android:id="@+id/tv_no_lyric"
                        android:layout_width="fill_parent"
                        android:layout_height="0px"
                        android:gravity="center"
                        android:text="@string/no_lyric"
                        android:textColor="#ffe0e0e0"
                        android:textSize="28.0dip" />

                    <com.octopus.android.carapps.common.qylk.myview.LrcView
                        android:id="@+id/lrcshow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone"></com.octopus.android.carapps.common.qylk.myview.LrcView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="5px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5px"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70px"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:src="@drawable/music_name" />

                                <TextView
                                    android:id="@+id/song"
                                    style="@style/shadowTextCommonStyleFonts"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="25px"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="#ffffffff"
                                    android:textSize="28px" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:src="@drawable/music_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/id3_artist_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70px">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:src="@drawable/music_artist" />

                                    <TextView
                                        android:id="@+id/artist"
                                        style="@style/shadowTextCommonStyleFonts"
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="25px"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#ffffffff"
                                        android:textSize="28px" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:src="@drawable/music_line" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70px">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:src="@drawable/music_album" />

                                    <TextView
                                        android:id="@+id/album"
                                        style="@style/shadowTextCommonStyleFonts"
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="25px"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#ffffffff"
                                        android:textSize="28px" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:src="@drawable/music_line" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/play_repeat_tag"
                            android:layout_width="37px"
                            android:layout_height="27px"
                            android:layout_marginLeft="10px"
                            android:layout_marginTop="3px"
                            android:src="@drawable/common_repeat_tag_level"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    style="@style/shadowText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:src="@drawable/music_time" />

                                <TextView
                                    android:id="@+id/music_total_time"
                                    style="@style/shadowText"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="25px"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="#ffffffff"
                                    android:textSize="24px" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/music_line" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev"
                style="@style/MusicButtonStyle1"
                android:layout_width="80px"
                android:layout_marginLeft="5px"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/prev2" />

            <ImageView
                android:id="@+id/pp"
                style="@style/MusicButtonStyle1"
                android:layout_width="80px"
                android:layout_marginLeft="5px"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/play_level" />

            <ImageView
                android:id="@+id/next"
                style="@style/MusicButtonStyle1"
                android:layout_width="80px"
                android:layout_marginLeft="5px"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/next2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/repeat2"
                style="@style/MusicButtonStyle1"
                android:layout_width="80px"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/common_repeat_tag_level" />

            <ImageView
                android:id="@+id/id3"
                style="@style/MusicButtonStyle1"
                android:layout_width="80px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/ico_artist_album" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120px"
        android:background="#44000000"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list"
            android:layout_width="80px"
            style="@style/MusicButtonStyle1"
            android:layout_marginLeft="0px"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/list" />

        <LinearLayout
            android:layout_width="350px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playing_files"
                android:layout_width="fill_parent"
                android:layout_height="40px"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22.0px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currenttime"
                    style="@style/shadowTextCommonStyleFonts"
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="end"
                    android:paddingRight="2px"
                    android:textColor="#ff31e37d"
                    android:textSize="22px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <SeekBar
                        android:id="@+id/progress"
                        android:layout_width="190px"
                        android:layout_height="42px"
                        android:background="@drawable/seek_bar_bg"
                        android:paddingLeft="2.0px"
                        android:paddingRight="10.0px"
                        android:progressDrawable="@drawable/rl_progress"
                        android:splitTrack="false"
                        android:thumb="@drawable/thumb" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totaltime"
                    style="@style/shadowTextCommonStyleFonts"
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:paddingLeft="2px"
                    android:textColor="#ffffffff"
                    android:textSize="22px" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/eq_mode_switch"
            style="@style/MusicButtonStyle1"
            android:layout_width="80px"
            android:background="@null"
            android:clickable="true"
            android:paddingRight="0px"
            android:scaleType="center"
            android:singleLine="true"
            android:text="@string/eq_text_normal"
            android:textSize="16px" />
    </LinearLayout>

</LinearLayout>