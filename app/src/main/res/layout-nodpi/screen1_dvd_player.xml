<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dvd_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <SurfaceView
                    android:id="@+id/camera_surfaceview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/brake_warning_text"
                    style="@style/CommonStyleFonts"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/warning_driving"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/no_signal"
                    style="@style/CommonStyleFonts"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/disconnect_video"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/only_black"
                    style="@style/CommonStyleFonts"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="#000000"
                    android:gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/keyboard2"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="220px"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/up"
                        style="@style/ButtonStyle2"
                        android:layout_width="90px"
                        android:layout_height="68px"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/u" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/left"
                        style="@style/ButtonStyle2"
                        android:layout_width="90px"
                        android:layout_height="68px"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/l" />

                    <TextView
                        android:id="@+id/ok"
                        style="@style/ButtonStyle2"
                        android:layout_width="90px"
                        android:layout_height="68px"
                        android:gravity="center"
                        android:text="@android:string/ok"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/right"
                        style="@style/ButtonStyle2"
                        android:layout_width="90px"
                        android:layout_height="68px"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/r" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/down"
                        style="@style/ButtonStyle2"
                        android:layout_width="90px"
                        android:layout_height="68px"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/d" />
                </LinearLayout>
            </LinearLayout>

