<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256.0px"
    android:layout_gravity="center_horizontal"
    android:ignoreGravity="@+id/icon"
    android:minHeight="78px"
    android:paddingLeft="0.0px" >

    <ImageView
        android:layout_width="61px"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/music_item_bg" />

    <ImageView
        android:id="@+id/play_indicator"
        android:layout_width="61px"
        android:layout_height="61px"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/music_play_now"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="76px"
        android:background="@drawable/line1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78px"
    android:paddingTop="3px"
    android:paddingBottom="8px"
        android:layout_marginLeft="71px"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_text"
            style="@style/CommonStyleFonts"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/list_text_time"
            style="@style/CommonStyleFonts"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="14.0sp" />
    </LinearLayout>

</RelativeLayout>