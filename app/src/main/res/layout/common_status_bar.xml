<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_status_bar_main"
    android:layout_width="match_parent"
    android:layout_height="60px"
    android:background="#88000000" >

    <TextView
        android:id="@+id/cur_app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/TextStyle2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home"
            style="@style/Screen1ButtonStyle800"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sysbar_home" />

        <RelativeLayout
            android:id="@+id/screen1_air_control1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal" >

            <ImageView
                android:layout_width="290px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90px"
                android:gravity="center_vertical"
                android:scaleType="center"
                android:src="@drawable/top_slider" >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/screen1_air_rear"
                    style="@style/Screen1ButtonStyle800"
                    android:layout_width="90px"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="10px"
                    android:paddingTop="10px"
                    android:text="@string/rear"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/screen1_air_minus"
                    style="@style/Screen1ButtonStyle800"
                    android:layout_width="90px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-15px"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="10px"
                    android:text="@string/minus"
                    android:textSize="58px" />

                <ImageView
                    android:id="@+id/screen1_air_control"
                    style="@style/Screen1ButtonStyle800"
                    android:layout_width="110px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:paddingBottom="10px"
                    android:paddingTop="10px"
                    android:scaleType="center"
                    android:src="@drawable/air_wind_small" />

                <TextView
                    android:id="@+id/screen1_air_add"
                    style="@style/Screen1ButtonStyle800"
                    android:layout_width="90px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-15px"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="10px"
                    android:paddingTop="10px"
                    android:text="@string/add"
                    android:textSize="48px" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/screen1_eject"
            style="@style/Screen1ButtonStyle800"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:scaleType="center"
            android:src="@drawable/dvd_eject" />

        <ImageView
            android:id="@+id/screen1_settings"
            style="@style/Screen1ButtonStyle800"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_settings" />

        <ImageView
            android:id="@+id/set_wallpaper"
            style="@style/Screen1ButtonStyle800"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_wallpaper_no_color" />

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="58px"
            android:gravity="center"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/back"
            style="@style/Screen1ButtonStyle800"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sysbar_back" />
    </LinearLayout>

</FrameLayout>