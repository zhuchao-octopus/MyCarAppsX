<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/screen1_background" >

    <LinearLayout
        android:id="@+id/video_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical" >

        <include layout="@layout/common_status_bar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/list_content"
                android:layout_width="406px"
                    android:layout_height="fill_parent"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ListView
                        android:id="@+id/tv_all_list"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        android:fadingEdge="none"
                        android:listSelector="@android:color/transparent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_add_all"
                            style="@style/CommonStyleFonts"
                            android:layout_width="fill_parent"
                            android:layout_height="64px"
                            android:background="@drawable/screen1_button_click_back2"
                            android:drawableLeft="@drawable/button_add"
                            android:drawablePadding="10.0px"
                            android:gravity="left|center"
                            android:text="@string/all_song"
                            android:textColor="#ffffffff"
                            android:textSize="24.0px" />

                        <ListView
                            android:id="@+id/tv_sd_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_sd2_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb2_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb3_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb4_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_local_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:listSelector="@android:color/transparent" />
                    </LinearLayout>

                    <!-- <View -->
                    <!-- android:layout_width="1.0px" -->
                    <!-- android:layout_height="fill_parent" -->
                    <!-- android:background="#626262" -->
                    <!-- android:gravity="center_vertical" /> -->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                        android:background="@drawable/com_background"
                android:orientation="vertical" >

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/rightButtonLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="58px"
                        android:layout_marginLeft="5px"
                        android:gravity="left" >

                        <TextView
                            android:id="@+id/btn_all"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_playing"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/playlist"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_local"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_arm"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/media"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_sd"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_sd"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/sd"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_sd2"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_sd"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/sd2"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_usb"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/usb"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_usb2"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/usb2"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_usb3"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/usb3"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />

                        <TextView
                            android:id="@+id/btn_usb4"
                            style="@style/CommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="left|center"
                            android:text="@string/usb4"
                            android:textColor="#ffffffff"
                            android:textSize="22.0px" />
                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <com.my.video.MoviceView
                        android:id="@+id/surface_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/brake_warning_text"
                        style="@style/CommonStyleFonts"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:background="#000000"
                        android:gravity="center"
                        android:text="@string/warning_driving"
                        android:textSize="32px" />

                    <ImageView
                        android:id="@+id/video_hide"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#ff000000"
                        android:scaleType="center"
                        android:src="@drawable/video_hide"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/progress_bar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="18.0px"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/currenttime2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center"
                            android:textColor="#ffffffff"
                            android:textSize="20px" />

                        <SeekBar
                            android:id="@+id/progress2"
                            android:layout_width="360px"
                            android:layout_height="42px"
                            android:background="@drawable/seek_bar_bg"
                            android:paddingLeft="17.0px"
                            android:paddingRight="20.0px"
                            android:progressDrawable="@drawable/rl_progress"
                            android:thumb="@drawable/thumb" />

                        <TextView
                            android:id="@+id/totaltime2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="left|center"
                            android:textColor="#ffffffff"
                            android:textSize="20px" />
                        
                        
                        <ImageView
                            android:id="@+id/play_repeat_tag"
                            android:layout_width="37px"
                            android:layout_height="27px"
                            android:layout_marginLeft="8px"
                            android:src="@drawable/common_repeat_tag_level" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_back"
            android:layout_width="fill_parent"
            android:layout_height="108px"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <!-- <View -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="1.0px" -->
            <!-- android:background="#626262" -->
            <!-- android:gravity="center_vertical" /> -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="108px"
            android:background="@drawable/radio_bottom_bg"
            
            android:gravity="center" 
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/prev"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/prev" />

            <ImageView
                android:id="@+id/pp"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/play_level" />

            <ImageView
                android:id="@+id/next"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/next" />

            <ImageView
                android:id="@+id/repeat"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/repeat" />

            <ImageView
                android:id="@+id/full"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/full" />
            
            <ImageView
                android:id="@+id/eq_mode_switch"
                style="@style/ButtonStyle1Screen1"
                android:clickable="true"
                android:scaleType="center"
                android:textSize="28px"  />

            <!-- <ImageView -->
            <!-- android:id="@+id/rew" -->
            <!-- style="@style/ButtonStyle1Screen1" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/rew" -->
            <!-- android:visibility="gone" /> -->


            <!-- <ImageView -->
            <!-- android:id="@+id/ffwd" -->
            <!-- style="@style/ButtonStyle1Screen1" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/ffwd" -->
            <!-- android:visibility="gone" /> -->


            <!-- <ImageView -->
            <!-- android:id="@+id/eq" -->
            <!-- style="@style/ButtonStyle1Screen1" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/eq" /> -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>