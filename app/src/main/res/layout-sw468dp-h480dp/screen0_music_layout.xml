<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/music_list_back"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/playing_content"
            android:layout_width="fill_parent"
            android:layout_height="600.0px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="432px"
                android:layout_height="fill_parent"
                android:paddingBottom="2px"
                android:paddingLeft="12px"
                android:paddingRight="6px"
                android:paddingTop="12px" >

                <LinearLayout
                    android:id="@+id/list_content"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ListView
                        android:id="@+id/tv_all_list"
                        style="@style/CommonListViewStyle1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        android:fadingEdge="none"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_add_all"
                            style="@style/CommonStyleFonts"
                            android:layout_width="fill_parent"
                            android:layout_height="88px"
                            android:background="@drawable/c_bg_button"
                            android:drawableLeft="@drawable/button_add"
                            android:drawablePadding="10.0px"
                            android:gravity="left|center"
                            android:text="@string/all_song"
                            android:textColor="#ffffffff"
                            android:textSize="24.0px" />

                        <ListView
                            android:id="@+id/tv_sd_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_sd2_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb2_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb3_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_usb4_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none"
                            android:visibility="gone" />

                        <ListView
                            android:id="@+id/tv_local_list"
                            style="@style/CommonListViewStyle1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0.0px"
                            android:fadingEdge="none" />
                    </LinearLayout>
                </LinearLayout>

                <ScrollView
                    android:id="@+id/folder_listview_same_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/tb"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="1px"
                        android:layout_marginTop="0px"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_all"
                            style="@style/PageSelectButtonButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:drawablePadding="1.0px"
                            android:drawableTop="@drawable/type_playing"
                            android:gravity="left|center"
                            android:text="@string/playlist"
                            android:textColor="#ffffffff"
                            android:textSize="24.0px"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_local"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_arm"
                            android:drawablePadding="0.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/media"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_sd"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_sd"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/sd"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_sd2"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_sd"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/sd2"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_usb"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/usb"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_usb2"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/usb2"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_usb3"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/usb3"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />

                        <Button
                            android:id="@+id/btn_usb4"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:clickable="true"
                            android:drawableLeft="@drawable/type2_usb"
                            android:drawablePadding="1.0px"
                            android:gravity="center"
                            android:paddingLeft="10px"
                            android:paddingRight="40px"
                            android:tag="ak_paramter=100,50"
                            android:text="@string/usb4"
                            android:textColor="#ffffffff"
                            android:textSize="28.0px" />
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="350px"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="10px" >

                            <RelativeLayout
                                android:layout_width="238px"
                                android:layout_height="238px"
                                android:layout_marginLeft="35px"
                                android:layout_marginTop="10px" >

                                <com.common.view.MusicRollImage
                                    android:id="@+id/album_art"
                                    android:layout_width="238px"
                                    android:layout_height="238px"
                                    android:background="@drawable/music_pic_back"
                                    android:paddingBottom="2px"
                                    android:paddingLeft="2px"
                                    android:paddingRight="2px"
                                    android:paddingTop="2px"
                                    android:scaleType="center"
                                    android:src="@drawable/music_pic" />

                                <ImageView
                                    android:layout_width="238px"
                                    android:layout_height="238px"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/music_pic_front" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30px"
                                android:layout_marginTop="0px"
                                android:orientation="vertical"
                                android:paddingRight="2px" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="80px"
                                        android:layout_gravity="center_vertical" >

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:src="@drawable/music_name" />

                                        <com.common.view.MarqueeTextView
                                            android:id="@+id/song"
                                            style="@style/shadowTextCommonStyleFonts"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="25px"
                                            android:ellipsize="end"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:textColor="#ffffffff"
                                            android:textSize="26px" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="0px"
                                        android:src="@drawable/music_line" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical" >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="80px" >

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:gravity="center"
                                                android:src="@drawable/music_artist" />

                                            <TextView
                                                android:id="@+id/artist"
                                                style="@style/shadowTextCommonStyleFonts"
                                                android:layout_width="match_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="25px"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:singleLine="true"
                                                android:textColor="#ffffffff"
                                                android:textSize="26px" />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0px"
                                            android:src="@drawable/music_line" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical" >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="80px" >

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="fill_parent"
                                                android:gravity="center"
                                                android:src="@drawable/music_album" />

                                            <TextView
                                                android:id="@+id/album"
                                                style="@style/shadowTextCommonStyleFonts"
                                                android:layout_width="match_parent"
                                                android:layout_height="fill_parent"
                                                android:layout_marginLeft="25px"
                                                android:ellipsize="end"
                                                android:gravity="center_vertical"
                                                android:singleLine="true"
                                                android:textColor="#ffffffff"
                                                android:textSize="26px" />
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="0px"
                                            android:src="@drawable/music_line" />
                                    </LinearLayout>
                                </LinearLayout>
                                <!-- <ImageView -->
                                <!-- android:id="@+id/play_repeat_tag" -->
                                <!-- android:layout_width="37px" -->
                                <!-- android:layout_height="27px" -->
                                <!-- android:layout_marginLeft="10px" -->
                                <!-- android:layout_marginTop="3px" -->
                                <!-- android:src="@drawable/common_repeat_tag_level" /> -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" >

                                        <ImageView
                                            style="@style/shadowText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:src="@drawable/music_time" />

                                        <TextView
                                            android:id="@+id/music_total_time"
                                            style="@style/shadowText"
                                            android:layout_width="match_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginLeft="25px"
                                            android:ellipsize="end"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:textColor="#ffffffff"
                                            android:textSize="24px" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/music_line" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_no_lyric"
                            android:layout_width="fill_parent"
                            android:layout_height="0px"
                            android:gravity="center"
                            android:text="@string/no_lyric"
                            android:textColor="#ffe0e0e0"
                            android:textSize="28.0dip" />

                        <cn.qylk.myview.LrcView
                            android:id="@+id/lrcshow"
                            android:layout_width="fill_parent"
                            android:layout_height="120px"
                            android:visibility="visible" >
                        </cn.qylk.myview.LrcView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90px"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:paddingTop="10px" >

                    <SeekBar
                        android:id="@+id/progress"
                        android:layout_width="fill_parent"
                        android:layout_height="42px"
                        android:background="@drawable/seek_bar_bg"
                        android:paddingLeft="17.0px"
                        android:paddingRight="20.0px"
                        android:progressDrawable="@drawable/rl_progress"
                        android:thumb="@drawable/thumb" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40px"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/currenttime"
                            style="@style/shadowTextCommonStyleFonts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffffff"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/totaltime"
                            style="@style/shadowTextCommonStyleFonts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="17px"
                            android:textColor="#ffffffff"
                            android:textSize="22px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120px"
            android:background="@drawable/bottom_menu_bg"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingTop="10px" >

                <ImageView
                    android:id="@+id/folder_switch"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/list" />

                <ImageView
                    android:id="@+id/repeat2"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/common_repeat_tag_level" />

                <ImageView
                    android:id="@+id/prev"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/prev" />

                <ImageView
                    android:id="@+id/pp"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/play_level" />

                <ImageView
                    android:id="@+id/next"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/next" />

                <ImageView
                    android:id="@+id/eq"
                    style="@style/CommonWeightMusic"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/eq" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBar1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>