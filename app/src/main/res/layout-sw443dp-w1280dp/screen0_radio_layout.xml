<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen1_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:layout_width="582.0dp"
        android:layout_height="151.0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40.0dp"
        android:src="@drawable/channel_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                        <AbsoluteLayout
                            android:layout_width="1084dp"
                            android:layout_height="95dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="3dp">

                            <ImageButton
                                android:id="@+id/radio_step_up_button"
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:layout_gravity="center"
                                android:layout_x="20dp"
                                android:layout_y="12dp"
                                android:background="@drawable/btn_prev" />

                            <ImageButton
                                android:id="@+id/radio_step_down_button"
                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:layout_gravity="center"
                                android:layout_x="988dp"
                                android:layout_y="12dp"
                                android:background="@drawable/btn_next" />

                            <LinearLayout
                                android:layout_width="920dp"
                                android:layout_height="fill_parent"
                                android:layout_x="92dp"
                                android:gravity="center_horizontal">

                                <AbsoluteLayout
                                    android:layout_width="720.0dp"
                                    android:layout_height="85.0dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/freq_back">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:layout_x="40dp"
                                        android:layout_y="1dp"
                                        android:gravity="left"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/radio_ta"
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:text="@string/radio_ta"
                                            android:textColor="@color/radio_rds_info"
                                            android:textSize="22dp"
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/radio_tp"
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:text="@string/radio_tp"
                                            android:textColor="@color/radio_rds_info"
                                            android:textSize="22dp"
                                            android:visibility="invisible" />

                                        <ImageView
                                            android:id="@+id/radio_st"
                                            android:layout_width="40dp"
                                            android:layout_height="30dp"
                                            android:gravity="center"
                                            android:scaleType="center"
                                            android:src="@drawable/radio_icon_stereo"
                                            android:text="@string/radio_st"
                                            android:textColor="@color/radio_rds_info"
                                            android:textSize="22dp"
                                            android:visibility="invisible" />

                                        <!-- <TextView -->
                                        <!-- android:id="@+id/radio_loc" -->
                                        <!-- android:layout_width="wrap_content" -->
                                        <!-- android:layout_height="30dp" -->
                                        <!-- android:gravity="center" -->
                                        <!-- android:text="@string/radio_function_text_loc" -->
                                        <!-- android:textColor="@color/radio_rds_info" -->
                                        <!-- android:textSize="22dp" -->
                                        <!-- android:visibility="invisible" /> -->
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/debug"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20dp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/freq_text_ps"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_x="0dp"
                                        android:layout_y="-8dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:singleLine="true"
                                        android:textColor="#3bb874"
                                        android:textSize="42dp"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/freq_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:layout_x="0dp"
                                        android:layout_y="-10dp"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:singleLine="true"
                                        android:textColor="#ff37d379"
                                        android:textSize="72.0dp" />

                                    <LinearLayout
                                        android:layout_width="480dp"
                                        android:layout_height="94dp"
                                        android:layout_x="50dp"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <AbsoluteLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="144dp"
                                            android:layout_x="80dp"
                                            android:visibility="gone">

                                            <ImageView
                                                android:id="@+id/rds_digit_p"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="bottom"
                                                android:layout_x="268dp"
                                                android:layout_y="0dp"
                                                android:background="@drawable/p" />

                                            <ImageView
                                                android:id="@+id/rds_digit_p2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_x="400dp"
                                                android:background="@drawable/radio_tr_digit" />

                                            <ImageView
                                                android:id="@+id/rds_digit_1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_x="0dp"
                                                android:background="@drawable/radio_tr_digit" />

                                            <ImageView
                                                android:id="@+id/rds_digit_2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_x="100dp"
                                                android:background="@drawable/radio_tr_digit" />

                                            <ImageView
                                                android:id="@+id/rds_digit_3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2.0dp"
                                                android:layout_marginRight="2.0dp"
                                                android:layout_x="200dp"
                                                android:background="@drawable/radio_tr_digit" />

                                            <ImageView
                                                android:id="@+id/rds_digit_p1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_x="300dp"
                                                android:background="@drawable/radio_tr_digit" />
                                        </AbsoluteLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/radio_fm_text"
                                        style="@style/shadowText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_x="80dp"
                                        android:gravity="center"
                                        android:textColor="@color/radio_rds_info1"
                                        android:textSize="34dp" />

                                    <TextView
                                        android:id="@+id/radio_unit_text"
                                        style="@style/shadowText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_x="580dp"
                                        android:gravity="center"
                                        android:textColor="@color/radio_rds_info1"
                                        android:textSize="34dp" />
                                </AbsoluteLayout>
                            </LinearLayout>
                        </AbsoluteLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:gravity="right|center_vertical"
                        android:paddingRight="50dp">

                        <ToggleButton
                            android:id="@+id/radio_function_button_st"
                            style="@style/ButtonStyle2"
                            android:layout_width="84.0dp"
                            android:layout_height="52.0dp"
                            android:background="@drawable/button_bacground"
                            android:clickable="true"
                            android:scaleType="center"
                            android:singleLine="true"
                            android:textColor="@color/radio_rds_info1"
                            android:textOff="@string/radio_st"
                            android:textOn="@string/radio_st"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:id="@+id/rds_buttons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ToggleButton
                                android:id="@+id/radio_function_button_af"
                                style="@style/ButtonStyle2"
                                android:layout_width="84.0dp"
                                android:layout_height="52.0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="18.0dp"
                                android:background="@drawable/button_bacground"
                                android:clickable="true"
                                android:scaleType="center"
                                android:textColor="@color/radio_rds_info1"
                                android:textOff="@string/radio_function_text_af"
                                android:textOn="@string/radio_function_text_af"
                                android:textSize="25dp" />

                            <ToggleButton
                                android:id="@+id/radio_function_button_ta"
                                style="@style/ButtonStyle2"
                                android:layout_width="84.0dp"
                                android:layout_height="52.0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="18.0dp"
                                android:background="@drawable/button_bacground"
                                android:clickable="true"
                                android:scaleType="center"
                                android:textColor="@color/radio_rds_info1"
                                android:textOff="@string/radio_function_text_ta"
                                android:textOn="@string/radio_function_text_ta"
                                android:textSize="25dp" />

                            <Button
                                android:id="@+id/radio_function_button_pty"
                                style="@style/ButtonStyle2"
                                android:layout_width="84.0dp"
                                android:layout_height="52.0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="18.0dp"
                                android:background="@drawable/button_bacground"
                                android:clickable="true"
                                android:scaleType="center"
                                android:text="@string/radio_function_text_pty"
                                android:textColor="@color/radio_rds_info1"
                                android:textSize="25dp" />

                            <ToggleButton
                                android:id="@+id/radio_function_button_reg"
                                style="@style/ButtonStyle2"
                                android:clickable="true"
                                android:scaleType="center"
                                android:textColor="@color/radio_rds_info1"
                                android:textOff="@string/radio_function_text_reg"
                                android:textOn="@string/radio_function_text_reg"
                                android:textSize="25dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rds_texts"
                        android:layout_width="fill_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/com_background"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/radio_rds_ps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="200dp"
                            android:textColor="@color/radio_rds_info1"
                            android:textSize="24dp" />

                        <com.octopus.android.carapps.common.view.MarqueeTextView
                            android:id="@+id/radio_rds_rt"
                            style="@style/shadowText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="200dp"
                            android:textColor="@color/radio_rds_info1"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/radio_current_pty_type_name"
                            style="@style/shadowText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/radio_rds_info1"
                            android:textSize="18dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.octopus.android.carapps.radio.MarkFaceView
                    android:id="@+id/radio_mark_face_view"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/markface" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68.0dp"
            android:layout_marginTop="0.0dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/radio_function_button_scan"
                android:layout_width="200.0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_bacground"
                android:scaleType="center"
                android:src="@drawable/radio_btn_search_normal" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <!-- <ImageView -->
            <!-- android:id="@+id/eq" -->
            <!-- android:layout_width="180.0dp" -->
            <!-- android:layout_height="fill_parent" -->
            <!-- android:background="@drawable/button_bacground" -->
            <!-- android:clickable="true" -->
            <!-- android:scaleType="center" -->
            <!-- android:src="@drawable/eq" /> -->

            <ImageView
                android:id="@+id/radio_keyboard"
                android:layout_width="200.0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_bacground"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/keyboard" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/fm_sel"
                android:layout_width="200.0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_bacground"
                android:scaleType="center"
                android:src="@drawable/fm_selector" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/am_sel"
                android:layout_width="200.0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_bacground"
                android:scaleType="center"
                android:src="@drawable/am_selector" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/radio_button_loc"
                android:layout_width="200.0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_bacground"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/ico_distance"
                android:tag="s" />

            <View
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92.0dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <com.octopus.android.carapps.common.view.MyScrollView
            android:id="@+id/radio_frequency_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:tag="0,1278,2556,3834,5112,6390:0">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/radio_gridview_layout"
                    android:layout_width="5115dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/radio_frequency_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alwaysDrawnWithCache="true"
                        android:background="#88000000"
                        android:columnWidth="213dp"
                        android:drawSelectorOnTop="false"
                        android:listSelector="@drawable/tl_l_bg"
                        android:numColumns="auto_fit"
                        android:padding="0dip"
                        android:persistentDrawingCache="animation|scrolling"
                        android:scrollbars="none"
                        android:stackFromBottom="false"
                        android:stretchMode="spacingWidth" />
                </LinearLayout>
            </FrameLayout>
        </com.octopus.android.carapps.common.view.MyScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/radio_pty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="770dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rds_wrap"
            android:paddingTop="13dp">

            <ListView
                android:id="@+id/radio_pty_list"
                style="@style/CommonListViewStyle1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:fadingEdge="none" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout> <!-- 最外围布局 纵向线性布局 -->
