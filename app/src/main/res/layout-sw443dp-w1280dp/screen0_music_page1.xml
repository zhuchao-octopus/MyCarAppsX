<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/playing_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp" >

                <com.common.view.MusicRollImage
                    android:id="@+id/album_art"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/music_pic_back"
                    android:paddingBottom="50dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingTop="50dp"
                    android:scaleType="center"
                    android:src="@drawable/music_pic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-38dp"
                    android:scaleType="center"
                    android:src="@drawable/cd3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="168dp"
                    android:paddingLeft="96dp"
                    android:paddingRight="72dp" >

                    <TextView
                        android:id="@+id/tv_no_lyric"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="@string/no_lyric"
                        android:textColor="#ffe0e0e0"
                        android:textSize="26.0dip" />

                    <cn.qylk.myview.LrcView
                        android:id="@+id/lrcshow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone" >
                    </cn.qylk.myview.LrcView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="18dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:src="@drawable/music_name" />

                                <TextView
                                    android:id="@+id/song"
                                    style="@style/shadowTextCommonStyleFonts"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="#ffffffff"
                                    android:textSize="22dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/music_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/id3_artist_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="64dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:src="@drawable/music_artist" />

                                    <TextView
                                        android:id="@+id/artist"
                                        style="@style/shadowTextCommonStyleFonts"
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="30dp"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#ffffffff"
                                        android:textSize="22dp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/music_line" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="64dp" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="fill_parent"
                                        android:gravity="center"
                                        android:src="@drawable/music_album" />

                                    <TextView
                                        android:id="@+id/album"
                                        style="@style/shadowTextCommonStyleFonts"
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="30dp"
                                        android:ellipsize="end"
                                        android:gravity="center_vertical"
                                        android:singleLine="true"
                                        android:textColor="#ffffffff"
                                        android:textSize="22dp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/music_line" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/play_repeat_tag"
                            android:layout_width="44dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/common_repeat_tag_level"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    style="@style/shadowText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:src="@drawable/music_time" />

                                <TextView
                                    android:id="@+id/music_total_time"
                                    style="@style/shadowText"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="30dp"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="#ffffffff"
                                    android:textSize="28dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/music_line" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="96dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/prev"
                style="@style/MusicButtonStyle1"
                android:layout_marginLeft="24dp"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/prev2" />

            <ImageView
                android:id="@+id/pp"
                style="@style/MusicButtonStyle1"
                android:layout_marginLeft="48dp"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/play_level" />

            <ImageView
                android:id="@+id/next"
                style="@style/MusicButtonStyle1"
                android:layout_marginLeft="48dp"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/next2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/repeat2"
                style="@style/MusicButtonStyle1"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/common_repeat_tag_level" />

            <ImageView
                android:id="@+id/id3"
                style="@style/MusicButtonStyle1"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="72dp"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/ico_artist_album" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#44000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list"
            style="@style/MusicButtonStyle1"
            android:layout_marginLeft="24dp"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/list" />

        <LinearLayout
            android:layout_width="850dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/playing_files"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="26.0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/currenttime"
                    style="@style/shadowTextCommonStyleFonts"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="end"
                    android:paddingRight="13dp"
                    android:textColor="#ff31e37d"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <SeekBar
                        android:id="@+id/progress"
                        android:layout_width="586dp"
                            android:splitTrack="false"
                        android:layout_height="42px"
                        android:background="@drawable/seek_bar_bg"
                        android:paddingLeft="17.0dp"
                        android:paddingRight="20.0dp"
                        android:progressDrawable="@drawable/rl_progress"
                        android:thumb="@drawable/thumb" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totaltime"
                    style="@style/shadowTextCommonStyleFonts"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="12dp"
                    android:textColor="#ffffffff"
                    android:textSize="22dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/eq_mode_switch"
            style="@style/MusicButtonStyle1"
            android:layout_width="200dp"
            android:background="@null"
            android:clickable="true"
            android:scaleType="center"
            android:singleLine="true"
            android:text="@string/eq_text_normal"
            android:textSize="26dp" />
    </LinearLayout>

</LinearLayout>