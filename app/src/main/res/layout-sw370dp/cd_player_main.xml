<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800px"
    android:layout_height="540px"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="0px" >

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="1px" -->
    <!-- android:background="#808080" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="342px"
        android:background="@drawable/cd_back"
        android:orientation="vertical"
        android:paddingLeft="160px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/disc"
                android:layout_width="44px"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/cd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="204px"
            android:layout_marginTop="8px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="64px" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/music_name" />

                <TextView
                    android:id="@+id/cd_title"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_marginLeft="16px"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="24px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cd_repeat2"
                        android:layout_width="88px"
                        android:layout_height="48px"
                        android:layout_marginRight="32px"
                        android:background="@drawable/button_click_back3"
                        android:scaleType="center"
                        android:src="@drawable/common_repeat_tag_dvd_level" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/cd_song_num"
                style="@style/CommonStyleFonts"
                android:layout_width="wrap_content"
                android:layout_height="24px"
                android:gravity="left|center_vertical"
                android:paddingLeft="136px"
                android:textColor="#ffffffff"
                android:textSize="22px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/currenttime"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="20px" />

                <RelativeLayout
                    android:layout_width="415px"
                    android:layout_height="33px" >

                    <SeekBar
                        android:id="@id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:maxHeight="8.0px"
                        android:minHeight="8.0px"
                        android:paddingLeft="16.0px"
                        android:paddingRight="16.0px"
                        android:progressDrawable="@drawable/seekbar_shape"
                        android:thumb="@drawable/sb_dot"
                        android:thumbOffset="0.0px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/totaltime"
                    style="@style/CommonStyleFonts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="22px" />
            </LinearLayout>
        </LinearLayout>

        <!-- <ImageView -->
        <!-- android:id="@+id/play_repeat_tag" -->
        <!-- android:layout_width="37px" -->
        <!-- android:layout_height="27px" -->
        <!-- android:layout_marginLeft="560px" -->
        <!-- android:layout_marginTop="320px" -->
        <!-- android:src="@drawable/common_repeat_tag_cd_level" /> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="78px"
        android:background="@drawable/bottombar2"
        android:orientation="horizontal"
        android:paddingBottom="4px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="4px" >

        <Button
            android:id="@+id/cd_eq_mode_switch"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:text="@string/eq_text_normal" />

        <ImageView
            android:id="@+id/cd_prev_button"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_marginLeft="64px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/prev" />

        <ImageView
            android:id="@+id/cd_play_pause_button"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/play_level" />

        <ImageView
            android:id="@+id/cd_stop_button"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/cd_next_button"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:layout_marginLeft="16px"
            android:background="@drawable/button_click_back3"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />
    </LinearLayout>

</LinearLayout> <!-- 最外围布局 纵向线性布局 -->
